<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl_container"
        >
    <LinearLayout
            android:id="@+id/activity_select_family_bind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <LinearLayout
                android:visibility="visible"
                android:background="@color/white"
                android:layout_marginTop="7dp"
                android:id="@+id/container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                >
            <android.support.v7.widget.RecyclerView
                    android:layout_weight="1"
                    android:id="@+id/icon_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            <EditText
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/et_search"
                    android:hint="搜索"
                    android:textColorHint="@color/gray_e0"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:lines="1"
                    android:drawableBottom="@drawable/line_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/light_gray"
                />
        <com.gersion.library.smartrecycleview.SmartRecycleView
                android:id="@+id/smartRecycleView"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                    android:background="@color/gray_f0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    />
            <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/ll_select_all"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >
                <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_select_all"
                        android:background="@drawable/btn_check"
                        android:layout_width="@dimen/checkbox_size"
                        android:layout_height="@dimen/checkbox_size"
                        />
                <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:text="全选"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

            </LinearLayout>
            <TextView
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:enabled="false"
                    android:id="@+id/tv_confirm"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/add_friend_circle_selector"
                    android:text="确定"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    />
        </RelativeLayout>

    </LinearLayout>
    <ImageView
            android:visibility="gone"
            android:id="@+id/float_img"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
</FrameLayout>